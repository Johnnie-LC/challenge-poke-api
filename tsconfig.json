{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "_/*": ["./src/*"],
      "_components/*": ["./src/components/*"],
      "_context/*":["./src/context/*"],
      "_service/*":["./src/service/*"]
    },
    "types": ["vitest/globals", "vitest/jsdom", "@testing-library/jest-dom"],
    "allowImportingTsExtensions": true, 
    "isolatedModules": true, 
    "noEmit": true
  },
  "include": ["src", "tests"]
}
